<h1 class="text-center mt-4">Create a new Daily Activity</h1>

<div class="container">


  

  <div class="row justify-content-center">
      <div class="col-10">
       
        <%= form_with(model: @daily_activity, class: "shadow p-3 mb-3 bg-light rounded", local: true ) do |f| %>
          <div class="form-group row"
          <p>
            <%= f.label :title, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "enter a title"  %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :description, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :description, rows: 10, class: "form-control shadow rounded", placeholder: "create a description"  %>
            </div>
          </div>
          
          
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-primary btn-lg" %>
        </div>
      <% end %>
    </div>

    
    <%= link_to '[ Return to articles listing ]', daily_logs_path %>
  
 </div>
</div>