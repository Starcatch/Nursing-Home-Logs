<div class="container">
  <div class="row justify-content-center">
      <div class="col-10">
      <%= form_with(model: @daily_activity, local: true ) do |f| %>
          <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label" %>
              <div class="col-10">
              <%= f.text_field :title,  placeholder: "enter a title"  %>
              </div>
          </div>    
      
          <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %>
              <div class="col-10">
              <%= f.text_area :description, rows: 10,class: "form-control shadow rounded", placeholder: "write a description"  %>
              </div>
          </div>    
        

          <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-dark btn-lg" %>
          </div>
      <% end %>
      </div>
  </div>
</div>        

