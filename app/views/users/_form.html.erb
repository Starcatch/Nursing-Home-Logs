<div class="container">


  

  <div class="row justify-content-center">
      <div class="col-10">
        <%= render 'shared/errors', obj: @user %>
        <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-light rounded", local: true ) do |f| %>
          <div class="form-group row"
          <p>
            <%= f.label :username, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "create a username"  %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "create a password"  %>
            </div>
          </div>
          
          
        <div class="form-group row justify-content-center">
          <%= f.submit "Sign Up!", class: "btn btn-outline-primary btn-lg" %>
        </div>
      <% end %>
    </div>

    
    <%= link_to '[ Return to articles listing ]', daily_logs_path %>
  
 </div>
</div>