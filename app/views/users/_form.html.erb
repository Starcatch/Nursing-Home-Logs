
        <%= render 'shared/errors', obj: @user %>
        <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-light rounded", local: true ) do |f| %>
          
       
            <%= f.label :username%>
            
              <%= f.text_field :username, placeholder: "create a username"  %>
           

         
            <%= f.label :password %>
     
              <%= f.password_field :password, rows: 5, placeholder: "create a password"  %>
         
          
          
   
          <%= f.submit(@user.new_record? ? "Sign Up!" : "Update account" , class: "btn btn-outline-primary btn-lg") %>
        
      <% end %>
  
   

    
   