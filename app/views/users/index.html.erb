<h1 class="text-center mt-4">Our Staff</h1>
  <div class="container">
    <% @users.each do |user| %>
      <div class="row justify-content-md-center">
        <div class="col-6 my-4">    
          <div class="card text-center mb-4 bg-white rounded">
            <%= link_to user.username, user_path(user) %>
            <div class="card-body">
              <h5 class="card-title">Shift: </td></h5>
                <p><%= user.daily_logs.count %></p>
                    
                <%= link_to "View Hours Worked",  user, class: "btn btn-outline-dark" %>

                <%= link_to "View Profile",  user, class: "btn btn-outline-dark" %>

                <% if logged_in? %>
                  <% if user == current_user %>
                    <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-dark" %>
                  <% end %>

                  <% if current_user.admin? %>
                    <%= link_to "Delete user", user_path(user), class: "btn btn-outline-danger", method: :delete,
                          data: {confirm: "Are you sure you want to delete the user account?"} %>
                  <% end %>
               <% end %>
            </div>
          </div> 
        </div>    
      </div>      
    <% end %> 
  </div>  
 