<h1 class="text-center mt-4">Our Staff</h1>

<div class="container">
      <% @users.each do |user| %>
        <div class="row justify-content-md-center">
          <div class="col-8 mt-4">
          <div class="card text-center bg-white rounded">
            <div class="card-header font-italic">
               <%= link_to user.username, user_path(user)  %>
            </div>
               <div class="card-body">

              
                
                  <h5 class="card-title">Shift: </td></h5>
                  
                  <p class="card-text"><%= user.daily_logs.count %>
                  </p>
                  
                  <%= link_to "View Vitals",  user, class: "btn btn-primary" %>

                  <%= link_to "View Hours Worked",  user, class: "btn btn-primary" %>

                  <%= link_to "View Profile",  user, class: "btn btn-success" %>

                <% if logged_in? %>
                    <% if user == current_user %>
                  

                      <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-info" %>
                    <% end %>

                    <% if current_user.admin? %>
                      <%= link_to "Delete user", user_path(user), class: "btn btn-outline-danger", method: :delete,
                      data: {confirm: "Are you sure you want to delete the user account?"} %>
                    <% end %>
                <% end %>
  
                  
                </div>

                  <div class="card-footer text-muted">
                    created date
                  </div>
              </div>
          </div>
        </div>
       <% end %> 
  </div> 