<h1>Log in!</h1>

       <%= form_with(scope: :session, url: login_path,  local: true ) do |f| %>
          
            <%= f.label :username %>
          
              <%= f.text_field :username, placeholder: "enter your username"  %>
           

          
            <%= f.label :password %>
           
              <%= f.password_field :password, rows: 10, placeholder: "enter your password" %>
         
          
          
          <%= f.submit "Log In", class: "btn btn-outline-primary btn-lg" %>
      
      <% end %>
  
    
  
    
