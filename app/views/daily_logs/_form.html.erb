<div class="container">


  <% if @daily_log.errors.any? %>
    <h2> The following errors prevented the daily log from being saved</h2>
    <ul>
      <% @daily_log.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
  <% end %>


  <div class="row justify-content-center">
      <div class="col-10">
        <%= form_with(model: @daily_log, class: "shadow p-3 mb-3 bg-light rounded", local: true ) do |f| %>
          <div class="form-group row"
          <p>
            <%= f.label :shift, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :shift, class: "form-control shadow rounded", placeholder: "Shift:"  %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :notes, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_area :notes, rows: 10, class: "form-control shadow rounded", placeholder: "Notes:"  %>
            </div>
          </div>
          
          
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-primary btn-lg" %>
        </div>
      <% end %>
    </div>

    <%= link_to '[ Return to articles listing ]', daily_logs_path %>
  </div>
</div>