<div class="container">


  

  <div class="row justify-content-center">
      <div class="col-10">
        <%= render 'shared/errors', obj: @daily_log %>
        <%= form_with(model: @daily_log, class: "shadow p-3 mb-3 bg-light rounded", local: true ) do |f| %>
          <div class="form-group row"
          <p>
            <%= f.label :shift, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :shift, class: "form-control shadow rounded", placeholder: "Shift:"  %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :Individual, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.collection_select(:individual_ids, Individual.all, :id, :name) %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :Activity, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.collection_select(:daily_activity_ids, DailyActivity.all, :id, :title) %>
            </div>
          </div>
          

          <div class="form-group row">
            <%= f.label :notes, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_area :notes, rows: 10, class: "form-control shadow rounded", placeholder: "Notes:"  %>
            </div>
          </div>
          
          
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-primary btn-lg" %>
        </div>
      <% end %>
    </div>

    
    <%= link_to '[ Return to Daily Logs listing ]', daily_logs_path %>
  
 </div>
</div>