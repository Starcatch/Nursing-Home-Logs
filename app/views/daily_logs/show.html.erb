<h2 class="text-center mt-4"><%= @daily_log.shift %></h2>
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-6 mt-4">
        <div class="card text-center  mb-4 bg-white rounded">
         

            by <%= @daily_log.user.username if @daily_log.user %>
            <%= link_to  user_path(@daily_log.user) %>

                      
            <div class="mt-2"><%= render @daily_log.individual %></div>
        
          
                
            <div class="card-body">
              <div class="card-text text-left"><%= simple_format(@daily_log.notes) %></div>
              <% if logged_in? && (@daily_log.user == current_user || current_user.admin?) %>

              <%= link_to "Edit", edit_daily_log_path(@daily_log), class: "btn btn-outline-dark" %>

              <%= link_to "Delete", daily_log_path(@daily_log), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} %>
              <% end %>
            </div>

            <div class="card-footer text-muted">
              <small>Entered <%= time_ago_in_words(@daily_log.created_at) %> ago</small>
            </div>
        </div>
      </div>
    </div>
  </div>
            
        
        