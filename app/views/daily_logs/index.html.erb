
<h1 class="text-center mt-4">Listing all Daily Logs</h1>

  <div class="container">
      <% @daily_logs.each do |log| %>
        <div class="row justify-content-md-center">
          <div class="col-8 mt-4">
          <div class="card text-center bg-white rounded">
            <div class="card-header font-italic">
              by Timur Mishiev
            </div>
               <div class="card-body">

              
                
                  <h5 class="card-title">Shift: <%= link_to log.shift, daily_log_path(log) %></td></h5>
                  
                  <p class="card-text"><%= truncate(log.notes, length: 100) %>
                  </p>
                  
                  <%= link_to "View",  daily_log_path(log), class: "btn btn-primary" %>

                  <%= link_to "Edit", edit_daily_log_path(log), class: "btn btn-info" %>

                  <%= link_to "Delete", daily_log_path(log), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} %>
                </div>
                  <div class="card-footer text-muted">
                    created date
                  </div>
              </div>
          </div>
        </div>
       <% end %> 
  </div> 

  
   
   
 

    



